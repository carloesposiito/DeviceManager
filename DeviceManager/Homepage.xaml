<Window x:Class="DeviceManager.Homepage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DeviceManager"
        xmlns:converters="clr-namespace:DeviceManager.Converters"
        mc:Ignorable="d"
        Closed="Homepage_Closed"
        Height="600"
        Loaded="Homepage_LoadingCompleted"
        Title="DeviceManager"
        Width="500"
        WindowStyle="ToolWindow"
        WindowStartupLocation="CenterScreen">

    <Window.Resources>
        <converters:Converter_DevicesCountToVisibility x:Key="Converter_DeviceCountToVisibility" />
        <converters:Converter_BooleanToString TrueValue="Operation in progress, please wait..."
                                              FalseValue=""
                                              x:Key="Converter_BooleanToString" />
        <converters:Converter_InverseBoolean x:Key="Converter_InverseBoolean" />
        <converters:Converter_AuthStatusToVisibility x:Key="Converter_AuthStatusToVisibility" />
        <converters:Converter_AuthStatusToVisibility_Reverse x:Key="Converter_AuthStatusToVisibility_Reverse" />
    </Window.Resources>

    <Grid>
        <TabControl Margin="15" Padding="15">

            <TabItem Header="Devices">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <GroupBox Grid.Row="0"
                              Header="Connected devices"
                              Padding="5">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="*" />
                            </Grid.RowDefinitions>

                            <Button Click="btn_ScanDevices_Click"
                                    Content="Scan devices"
                                    Grid.Row="0"
                                    Style="{StaticResource btn_Default}"
                                    x:Name="btn_ScanDevices" />

                            <ListBox DisplayMemberPath="Model"
                                     Grid.Row="1"
                                     d:Height="150"
                                     MaxHeight="150"
                                     x:Name="lb_ScannedDevices">
                                <ListBox.ItemContainerStyle>
                                    <Style TargetType="ListBoxItem">
                                        <Setter Property="Focusable"
                                                Value="False" />
                                    </Style>
                                </ListBox.ItemContainerStyle>
                            </ListBox>

                        </Grid>
                    </GroupBox>

                    <GroupBox Grid.Row="1"
                              Header="Wireless connection"
                              Padding="5">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <Label Content="Device IP address:"
                                   Grid.Row="0"
                                   Style="{StaticResource lbl_Default}"/>
                            <TextBox Grid.Row="1"
                                     x:Name="tb_DeviceIpAddress" />

                            <Label Content="Device port:"
                                   Grid.Row="2"
                                   Style="{StaticResource lbl_Default}"/>
                            <TextBox Grid.Row="3"
                                     x:Name="tb_DevicePort" />

                            <CheckBox Click="checkBox_PairingNeeded_Click"
                                      Content="Pair a new device"
                                      Grid.Row="4"
                                      Style="{StaticResource cb_Default}"
                                      x:Name="checkBox_PairingNeeded" />

                            <Label Content="Device pairing code:"
                                   Grid.Row="5"
                                   d:Visibility="Visible"
                                   Style="{StaticResource lbl_Default}"
                                   Visibility="Collapsed"
                                   x:Name="lbl_DevicePairingCode" />
                            <TextBox Grid.Row="6"
                                     d:Visibility="Visible"
                                     Visibility="Collapsed"
                                     x:Name="tb_DevicePairingCode" />

                            <Button Click="btn_ConnectWirelessDevice_Click"
                                    Content="Pair Wireless device"
                                    Grid.Row="7"
                                    Style="{StaticResource btn_Default}"
                                    x:Name="btn_ConnectWirelessDevice" />
                        </Grid>
                    </GroupBox>

                </Grid>
            </TabItem>

            <TabItem Header="Files">
                <ComboBox DisplayMemberPath="Model"
                          Grid.Row="1"
                          SelectedIndex="0"
                          Visibility="Collapsed"
                          x:Name="cb_ActiveDevice" />
            </TabItem>
            
        </TabControl>
    </Grid>
</Window>
